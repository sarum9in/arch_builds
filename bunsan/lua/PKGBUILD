# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
pkgname=bunsan.lua-git
pkgver=0.0.0
pkgrel=1
pkgdesc="bunsan lua wrapper library"
arch=('i686' 'x86_64')
url=""
license=('GPL')
groups=()
depends=(
  'bunsan.common-git'
  'lua'
)
makedepends=(
  'bunsan.cmake-git'
  'git'
  'boost'
)
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("$pkgname::git://cs.istu.ru/bunsan_lua.git")
#source=("$pkgname::git://github.com/bunsanorg/lua.git")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$pkgname"
  rm -rf build && mkdir build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make $MAKEFLAGS
}

check() {
  cd "$srcdir/$pkgname/build"
  make test
}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install
}
