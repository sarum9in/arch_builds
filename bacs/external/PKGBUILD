# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
pkgname='bacs.external-git'
pkgver=0.0.0
pkgrel=1
pkgdesc="BACS external API"
arch=('i686' 'x86_64')
url="https://github.com/bacsorg/external"
license=('GPL')
groups=()
depends=(
  'bunsan.common-git'
  'bunsan.protobuf-git'
  'grpc'
)
makedepends=(
  'bunsan.cmake-git'
  'git'
  'boost'
  'turtle'
)
provides=()
conflicts=('bunsan.bacs.external-git')
replaces=('bunsan.bacs.external-git')
backup=()
options=()
install=
source=("$pkgname::git://github.com/bacsorg/external.git")
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$pkgname"
  rm -rf build && mkdir build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make $MAKEFLAGS
}

check() {
  cd "$srcdir/$pkgname/build"
  #make test ARGS=--output-on-failure
}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install
}
