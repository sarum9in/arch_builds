# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
pkgname='bacs.legacy.backend-git'
pkgver=0.0.0
pkgrel=1
pkgdesc="BACS legacy backend"
arch=('i686' 'x86_64')
url="https://github.com/bacsorg/legacy_backend"
license=('GPL')
groups=()
depends=(
  'bunsan.pm-git'

  'mariadb-clients'

  'python2'
  'python'
  'gcc'
  'mono'
  'fpc'
  'java-environment'
  'bacs.kturtle-git'
)
makedepends=(
  'bunsan.cmake-git'
  'bunsan.test-git'
  'git'
  'boost'
  'turtle-git'
)
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=bacs.legacy.backend-git.install
source=(
  "$pkgname::git+https://github.com/bacsorg/legacy_backend.git"
  "bacsd@.service"
)
noextract=()
md5sums=('SKIP'
         'afde3fa6fb5ed49661dfcac0cafd2a61')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$pkgname"
  rm -rf build && mkdir build && cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make $MAKEFLAGS
}

#check() {
#  cd "$srcdir/$pkgname/build"
#  make test ARGS=--output-on-failure
#}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install

  install -dm 750 "${pkgdir}/srv/bacs"
  install -Dm 644 "${srcdir}/bacsd@.service" "${pkgdir}/usr/lib/systemd/system/bacsd@.service"
}
